{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "preLaunchTask": "make",
                "program": "${workspaceRoot}/out/toh.out",
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceRoot}/out/toh.out"
            },
            "windows": {
                "preLaunchTask": "mingw32-make",
                "program": "${workspaceRoot}/out/toh.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\Program Files (x86)\\Dev-Cpp\\MinGW32\\bin\\gdb.exe"
            }
        }
    ]
}